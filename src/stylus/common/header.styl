.header
	position fixed
	top 0
	left 0
	z-index 20

	width 100%

	background-color $white

	&__wrapper
		padding 10px 20px

		display flex
		align-items center
		justify-content space-between

	&__logo
		display block

		max-width 250px
		width 100%

	&__navigation
		margin-left auto

	&__list
		display flex
		
	&__item

		&:not(:last-child)
			margin-right 27px
		
		&:hover
			
			& .header__link
				color $pink
				border-color $pink

	&__link
		display block

		font-size 16px
		line-height 20px
		font-family $Regular
		
		border-bottom 1px solid transparent
		text-transform uppercase
		color $text

		transition-property color, border-color
		transition-duration .3s

@media(max-width 991px)
	.header
		
		&__wrapper
			justify-content center

		&__navigation
			display none