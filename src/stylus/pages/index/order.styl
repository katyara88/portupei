.order
	overflow hidden

	background-color $peach

	&__wrapper
		padding 71px 20px 120px

		display flex
		flex-direction column
		align-items center

		color $text
		text-align center

	&__title
		margin 0
		margin-bottom 30px
		padding-bottom 25px

		height 100%

		position relative

		font-size 60px
		line-height 1
		font-family $Bold

		text-transform uppercase

		&:before
			position absolute
			left 45%
			bottom 0

			width 90px
			height 3px

			content ''
			background-color $black

	&__content
		width 100%

	&__list
		width 100%

		display flex
		justify-content space-between

		position relative

		&:before
			position absolute
			left 13%
			top 66.5%

			width 75%
			height 2px

			content ''
			background-color $lightGrey

	&__item
		flex-basis 25%

		display flex
		flex-direction column
		align-items center
		justify-content center

	&__image
		margin-bottom 32px
		width 136px
		height 136px

		display flex
		align-items center
		justify-content center

		background-color $pink
		border-radius 50%
		border 6px solid #d579a1

		position relative

		&:before
			position absolute
			left 50%
			bottom -33%
			z-index 10

			width 10px
			height 10px

			content ''
			background-color $lightGrey
			border-radius 50%

		&:after
			position absolute
			left 48%
			bottom -35.5%
			z-index 10

			width 16px
			height 16px

			content ''
			background-color $lightGrey
			opacity .3
			border-radius 50%

	&__descr
		font-size 16px
		line-height 24px
		font-family $Regular

		color $text

@media(max-width 960px)
	.order

		&__list

			flex-wrap wrap

			&:before
				display none

		&__item
			margin-bottom 40px
			flex-basis 50%

			&:last-child,
			&:nth-child(3)
				margin-bottom 0

		&__image
			&:before,
			&:after
				display none


@media(max-width 768px)
	.order

		&__wrapper
			padding 40px 20px

		&__title
			margin-bottom 15px
			padding-bottom 0

			font-size 40px

			&:before
				display none
		
		&__item
			margin-bottom 20px
			flex-basis 100%

			&:nth-child(3)
				margin-bottom 20px

@media(max-width 470px)
	.order

		&__title
			margin-bottom 10px

			font-size 24px

