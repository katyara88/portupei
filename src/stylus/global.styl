// global

html
	box-sizing border-box

*,
*::before,
*::after
	box-sizing inherit

body
	margin 0

	font-family "OpenSansRegular", sans-serif
	font-size 16px
	line-height 24px

	background-color #fff
	color #1E1E1E

img
	max-width 100%

a
	text-decoration none
	color inherit

.container
	margin 0 auto
	padding 0 20px

	max-width 980px


.list-reset
	margin 0
	padding 0
	
	list-style-type none